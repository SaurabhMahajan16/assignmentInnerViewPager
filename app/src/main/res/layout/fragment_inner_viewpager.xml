<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rl_lowerVpFragment"
            style="@style/fillparent"
            
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_lowerbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:orientation="horizontal"

                >

                <Button
                    android:id="@+id/btn_pending_completed"
                    style="@style/fragmentButtonLayout"
                    android:layout_marginEnd="0.2dp"
                     />

                <Button
                    android:id="@+id/btn_accepted_cancelled"
                    style="@style/fragmentButtonLayout"
                     />


            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_innerswipe"
                style="@style/fillparent"
                android:layout_below="@id/ll_lowerbutton"
                android:layout_marginTop="15dp">


            </android.support.v4.view.ViewPager>


        </RelativeLayout>


    </LinearLayout>





